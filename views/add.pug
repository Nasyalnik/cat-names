extends extends/main
block title
  | Добавление имён
block append styles
block append scripts
  script(type='text/javascript' src='/js/addnames.js')
block header
block content
  include includes/index-search.pug
  .modal.is-clipped.is-active
    .modal-background
    .modal-card
      header.modal-card-head
        p.modal-card-title Добавить имена в базу котиков
        figure.image.is-64x64.modal-card-title
          img(src='/img/cat-icon.png')
      section.modal-card-body
        .column
          form#add-cat(method='POST' action='/cats/add')
            .level.add-cat-data
              .level-left
                .level-item
                  .control.is-expanded
                    input.input(
                      type='text',
                      placeholder='Введите имя',
                      name='cat-name-0'
                    )
              .level-right
                .level-item
                  .control 
                    span.specify-gender Укажите пол: 
                    label.radio
                      input(
                        type='radio',
                        name='cat-gender-0',
                        value='female')
                      |     &ZHcy;
                    label.radio
                      input(
                        type='radio',
                        name='cat-gender-0',
                        value='male')
                      |     &Mcy;
                    label.radio
                      input(
                        type='radio',
                        name='cat-gender-0',
                        value='unisex')
                      |     &Ucy;&ncy;&icy;&vcy;&iecy;&rcy;&scy;.
                  .control
                    button.button.is-light.add-new-name
                      span.icon
                        i.fas.fa-plus
            button.button.is-warning.submit-cats Добавить
    a.modal-close.is-large(href="/" aria-label='close')