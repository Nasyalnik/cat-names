doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')

    title Все имена

    link(rel='stylesheet', href='/css/bulma.min.css')
    link(rel='stylesheet', href='/css/fontawesome.all.min.css')

    script(type='text/javascript', src='/libs/alertifyjs/alertify.min.js')
    link(rel='stylesheet', href='/libs/alertifyjs/css/alertify.min.css')
    link(rel='stylesheet', href='/libs/alertifyjs/css/themes/bootstrap.min.css')
  body
    include includes/header.pug    
    section.section
      .container
        .columns
          if order
            .column.is-2
            .column(style="margin-top: -30px")
              .field
                .control.has-icons-left
                  .select.is-small
                    form#sorting(method="GET")
                      select(name="order")
                        option.is-hidden
                          | Сортировка групп
                        if order == 'asc'
                          option(selected="selected" value='asc')
                            | По возврастанию
                        else
                          option(value='asc')
                            | По возврастанию
                        if order == 'desc'
                          option(selected="selected" value='desc')
                            | По убыванию
                        else
                          option(value='desc')
                            | По убыванию
                  .icon.is-small.is-left
                    i.fas.fa-sort
        .columns
          .column.is-2
            figure.image.is-64x64.is-pulled-right
              img(src='/img/cat.png')
          .column
            each group in groups
              .search-result-group
                div
                  span.title.is-4 #{group.title}
                  span.is-pulled-right.has-text-grey.is-size-7 #{group.count}
                br
                div
                  .tags
                    each cat in group.cats
                      span.tag.is-size-5
                        if cat.gender == 'female'
                          span.icon.has-text-danger
                            i.fas.fa-venus
                        else if cat.gender == 'male'
                          span.icon.has-text-info
                            i.fas.fa-mars
                        else if cat.gender == 'unisex'
                          span.icon.has-text-primary
                            i.fas.fa-venus-mars
                        a(href='/cats/' + cat.id, style={color: 'black'}) #{cat.name}
                hr

    if showPopup
      script(type='text/javascript', src='/js/popup.js')
    script(type='text/javascript', src='/js/sort-cats.js')